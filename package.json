{
  "name": "@alaskaairux/ods-wc-generator",
  "version": "1.1.1",
  "description": "Boilerplate generator for Orion Design Components",
  "main": "index.js",
  "files": [
    "bin",
    "template",
    "util"
  ],
  "bin": {
    "ods-wc-generate": "./bin/generate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlaskaAirlines/ODS-WC-Generator.git"
  },
  "author": "AlaskaAirlines",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=11.11"
  },
  "bugs": {
    "url": "https://github.com/AlaskaAirlines/ODS-WC-Generator/issues"
  },
  "homepage": "https://github.com/AlaskaAirlines/ODS-WC-Generator#readme",
  "dependencies": {
    "arg": "^4.1.0",
    "chalk": "^2.4.2",
    "latest-version": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "@semantic-release/npm": "^5.1.9",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.24"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "testbuild": "node bin/generate.js --test --name foo --dir ./ods-foo",
    "sweep": "rm -rf ods-foo",
    "blanktest": "echo \"Error: no test specified\" && exit 0",
    "test": "npm-run-all testbuild"
  },
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    {
      "name": "Dale Sande",
      "email": "dale.sande@alaskaair.com"
    },
    {
      "name": "Zach Newton",
      "email": "zach.newton@alaskaair.com"
    }
  ],
  "keywords": [
    "alaska airlines",
    "orion design system",
    "web components",
    "generator"
  ],
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "./CHANGELOG.md",
          "changelogTitle": "# Semantic Release Automated Changelog"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "./CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "global-require": "off",
      "semi": "warn",
      "no-undef": "error",
      "no-unused-vars": "warn",
      "no-console": "warn"
    }
  }
}
